# ─────────────────────────────────────────
# App
# ─────────────────────────────────────────
PORT=4000
NODE_ENV=development

# CORS / Frontend
FRONTEND_ORIGIN=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ─────────────────────────────────────────
# Base de datos (PostgreSQL local)
# ─────────────────────────────────────────
DATABASE_URL="postgresql://tienda:tienda@127.0.0.1:5432/tienda?schema=public"

# ─────────────────────────────────────────
# Auth (JWT)
# Genera valores reales con: `openssl rand -hex 64`
# ─────────────────────────────────────────
JWT_ACCESS_SECRET=__REPLACE_ME__
JWT_REFRESH_SECRET=__REPLACE_ME__
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Cookies
COOKIE_DOMAIN=
COOKIE_SECURE=false
COOKIE_SAME_SITE=Strict

# ─────────────────────────────────────────
# Stripe (opcional)
# ─────────────────────────────────────────
STRIPE_SECRET_KEY=__REPLACE_ME__
STRIPE_WEBHOOK_SECRET=__REPLACE_ME__
CURRENCY=usd

# ─────────────────────────────────────────
# Cloudinary (opcional)
# ─────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=tienda/products

# ─────────────────────────────────────────
# FX / Scraper (opcional)
# ─────────────────────────────────────────
FX_SOURCE_URL=https://eltoque.com/
FX_CRON_ENABLED=true
FX_CRON=0 13 * * *

# ─────────────────────────────────────────────────────────────
# Geocoding
# ─────────────────────────────────────────────────────────────

GEOAPIFY_API_KEY=__REPLACE_ME__